#bikeroutes {
  line-width:5;
  line-color:grey;
  line-opacity:0.6;
}

#bikeroutes[zoom < 14] {
  line-width:3;
  line-opacity:0.7;
}

#bikeroutes[CLASS=1] {
  line-color:red;
}

#bikeroutes[CLASS=2] {
  line-color:yellow;
}

#bikeroutes[CLASS=3] {
  line-color:orange;
}

#bikeroutes[CLASS=4] {
  line-color:blue;
}

#bikeroutes[CLASS=5] {
  line-color:green;
}

#bikeroutes[CLASS=9] {
  line-color:red;
}
